<html>
  <head/>
  <body>
    <header class="cabecalhoPrincipal">
      <include-html("../../menu.html")/>
    </header>
    <main class="conteudoPrincipal">
      <div class="container">
        <div class="container">
          <h1>Serviços</h1>
          <table id="tasks" class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Cliente</th>
                <th>Tipo</th>
                <th>Descrição</th>
                <th>Editar</th>
                <th>Remover</th>
                <th>Adicionar arquivos</th>
              </tr>
            </thead>
            <tbody>
              <tr id="task_${task.id}" for(task in data.tasks)>
                <td>${task.id}</td>
                <td>${task.titulo}</td>
                <td>${task.cliente}</td>
                <td>${task.tipo}</td>
                <td>${task.descricao}</td>
                <td>
                  <a class='button-link' href="/tasks/form/${task.id}">Editar</a>
                </td>
                <td>
                  <a class='button-link' href="#" data-ref="${task.id}" data-type="remocao">Remover</a>
                </td>
                <td><a class='button-link' href="#">Adicionar arquivos</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <script src="../estatico/js/remove-task.js">
    </script>
  </body>
</html>
